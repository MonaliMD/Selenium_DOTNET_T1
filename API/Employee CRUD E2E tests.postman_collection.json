	"item": [
		{
			"name": "Create employee",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//Assert 1 - satus check",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"//Assert 2 - response value check as text",
							"pm.test(\"Assert-2 , check if the result contain expected name\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"Ann\");",
							"});",
							"",
							"//Assert 2 - response value check as text",
							"pm.test(\"Assert-2 , check if the result contain expected salary\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"232000\");",
							"});",
							"",
							"//Assert 2 - response value check as text",
							"pm.test(\"Assert-2 , check if the result contain expected age\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"30\");",
							"});",
							"",
							"//Assert 3 - response value name check as Jason Data",
							"pm.test(\"Assert-2,check if the result contain expected name Ann \", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.name).to.eql(\"Ann\");",
							"    pm.expect(jsonData.data.salary).to.eql(\"1232000\");",
							"    pm.expect(jsonData.data.age).to.eql(\"30\");",
							"});",
							"",
							"",
							"//set environment variable for ID",
							"pm.test(\"Set employee ID as new env variable \", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"Employee_Id\", jsonData.data.id);",
							"});",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
